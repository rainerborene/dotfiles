config defaultToCurrentScreen true
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config nudgePercentOf screenSize
config resizePercentOf screenSize

bind o:cmd;shift relaunch
bind f:cmd;shift move screenOriginX;screenOriginY screenSizeX;screenSizeY
bind h:cmd;shift move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
bind k:cmd;shift push up bar-resize:screenSizeY/2
bind j:cmd;shift push down bar-resize:screenSizeY/2
bind l:cmd;shift move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
bind g:cmd grid padding:5 0:6,2
bind esc:cmd hint
