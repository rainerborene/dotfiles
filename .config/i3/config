# vim: set fdm=marker :
# i3 config file (v4)

# Variables {{{1

set $mod Mod1

set $ws1  1:
set $ws2  2:
set $ws3  3:
set $ws4  4:
set $ws5  5:
set $ws6  6:
set $ws7  7:
set $ws8  8:
set $ws9  9:
set $ws10 10:

set $dark       #65737e
set $background #2b303b
set $white      #f5f5f5
set $red        #bf616a

# }}}1
# Basic settings {{{1

font pango:Tewi, Icons, 9

new_window none
new_float none
hide_edge_borders both

workspace_auto_back_and_forth yes
mouse_warping none

gaps inner 10
gaps outer 10

# }}}1
# Window titles {{{1

client.focused          $white $white $background $white
client.unfocused        $dark  $dark  $white      $dark
client.focused_inactive $dark  $dark  $white      $dark
client.urgent           $red   $red   $white      $red

# }}}1
# Keybindings {{{1

floating_modifier $mod

bindsym $mod+Return exec --no-startup-id urxvt -cd "`xcwd`"

bindsym $mod+q kill

bindsym $mod+p exec --no-startup-id j4-dmenu-desktop --dmenu='dmenu -i -h 18 -nb "$background" -fn "Tewi-8" -nf "$white" -sb "#8fa1b3" -sf "$background"'
bindsym $mod+o exec --no-startup-id passmenu -i -h 18 -nb "$background" -fn "Tewi-8" -nf "$white" -sb "#8fa1b3" -sf "$background"

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+s split v
bindsym $mod+v split h

bindsym $mod+f fullscreen

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+Tab workspace back_and_forth

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
bindsym $mod+Shift+Tab move container to workspace back_and_forth

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+n exec --no-startup-id thunar

mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# }}}1
# Window assigments {{{1

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable

for_window [class="Wine"] floating enable
for_window [class="Skype"] floating enable
for_window [class="URxvt"] border pixel 2

assign [class="Firefox"] $ws1
assign [class="Skype"] $ws2
assign [class="Popcorntime"] $ws4
assign [class="Google-chrome-stable"] $ws4
assign [class="URxvt"] $ws3

# }}}1
# Bar configuration {{{1

bar {
    position top
    status_command i3blocks
    strip_workspace_numbers yes

    colors {
        background $background
        statusline $white
        separator $background

        focused_workspace  $background $background $white
        active_workspace   $background $background $white
        inactive_workspace $background $background $dark
        urgent_workspace   $red        $red        $white
    }
}

# }}}1
# Startup {{{1

exec --no-startup-id feh --bg-fill ~/Pictures/02915_crossingthegap_1280x800.jpg
exec --no-startup-id xset r rate 200 20
exec --no-startup-id xcape
exec --no-startup-id compton -b
exec --no-startup-id urxvt
exec --no-startup-id dropbox start
exec --no-startup-id firefox
exec --no-startup-id skype

# }}}1
