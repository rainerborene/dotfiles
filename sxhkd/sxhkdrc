#
# bspwm hotkeys
#

alt + super + Escape
	pkill -x panel; bspc quit

alt + q
	bspc window -c

alt + x
	bspc window -k

alt + w
	bspc monitor -f next

alt + t
	bspc desktop -l next

alt + b
	bspc desktop -B

alt + e
	bspc window -f {next.floating,next.tiled}

alt + p
	bspc window -t private

alt + o
	bspc window -t locked

alt + {s,f}
	bspc window -t {floating,fullscreen}

alt + {semicolon,Tab}
	bspc {window,desktop} -f last

alt + m
	bspc window -s biggest

alt + {comma,period}
	bspc desktop -F {horizontal,vertical}

alt + shift + {comma,period}
	bspc desktop -R {90,270}

alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# Move window into presel position
alt + shift {a,s,d,f}
	bspc window -w {left.manual,down.manual,up.manual,right.manual}

alt + bracket{left,right}
	bspc desktop -f {prev,next}

alt + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

alt + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

alt + ctrl + {1-9}
	bspc window -r 0.{1-9}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

super + {h,l}
	window_move {-p,-n} -x -s 20

super + {j,k}
	window_move {-p,-n} -y -s 20

#
# mouse bindings
#

~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

alt + Return
	urxvt

alt + d
	dmenu_launch

alt + n
	nautilus --browser --no-desktop

alt + Print
	scrot -s ~/Pictures/screenshot-$(date +%F-%S).png

Print
	scrot ~/Pictures/screenshot-$(date +%F-%S).png

alt + shift + e
	bspwm-exit

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd
