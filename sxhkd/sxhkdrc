#
# bspwm hotkeys
#

alt + super + Escape
	pkill -x panel; bspc quit

alt + q
	bspc window -c

alt + w
	bspc monitor -f next

alt + t
	bspc desktop -l next

alt + b
	bspc desktop -B

alt + {s,f}
	bspc window -t {floating,fullscreen}

alt + {semicolon,Tab}
	bspc {window,desktop} -f last

alt + apostrophe
	bspc window -s last

alt + y
	bspc window -w last.manual

alt + m
	bspc window -s biggest

alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

alt + {_,shift + }c
	bspc window -f {next,prev}

alt + shift + {comma,period}
	bspc desktop -R {90,270}

# Move window into presel position
alt + shift {a,s,d,f}
	bspc window -w {left.manual,down.manual,up.manual,right.manual}

alt + {comma,period}
	bspc desktop -F {horizontal,vertical}

alt + bracket{left,right}
	bspc desktop -f {prev,next}

alt + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

alt + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + {h,l}
	window_move {-p,-n} -x -s 20

super + {j,k}
	window_move {-p,-n} -y -s 20

alt + ctrl + {1-9}
	bspc window -r 0.{1-9}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

alt + Return
	urxvt

alt + d
	dmenu_launch

alt + n
	nautilus --browser --no-desktop

Print
	scrot ~/Pictures/screenshot-$(date +%F-%S).png

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd
