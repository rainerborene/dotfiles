# dir aliases
alias cdd='cd -'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# basic commands
alias lc='ls --color -1'
alias ls='ls --color'
alias ll='ls --color -laGh'
alias fn='find . -name'
alias hi='history | tail -20'

# git
alias g='git'
alias gb='git branch'
alias gba='git branch -a'
alias gco='git checkout'
alias gs='git status'
alias gc='git commit -v'
alias gd='git diff --color'
alias gdc='git diff --cached --color'
alias gl='git log --oneline --color'
alias gp='git push'
alias gu='git pull'

# commit pending changes and quote all args as message
function gg() {
  git commit -v -a -m "$*"
}

# ruby related things
alias r='rake'
alias b='bundle'
alias gi='gem install'

# command line clipboard (ala Mac OS X)
if [ "$(uname)" == "Linux" ]; then
  alias pbcopy='xclip -selection clipboard'
  alias pbpaste='xclip -selection clipboard -o'
fi

# source dotfiles
alias reload='source ~/.bashrc'
