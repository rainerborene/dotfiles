if [ "$(uname)" == "Linux" ]; then
  alias pbcopy='xclip -selection clipboard'
  alias pbpaste='xclip -selection clipboard -o'
fi

alias ..='cd ..'
alias cdd='cd -'
alias ll='ls --color=auto -laGh'
alias fn='find . -name'
alias g='git'
alias gs='git status'
alias gl='git log --oneline --color'
alias b='bundle'
alias gi='gem install'
alias reload='source ~/.bashrc'
