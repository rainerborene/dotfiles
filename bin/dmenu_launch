#!/usr/bin/env bash
export SHELL=/bin/bash

fn='Termsynu-10' # font
nf='\#eff1f5' # foreground
nb='\#2b303b' # background
sb='\#d08770' # selected background
sf='\#2b303b' # selected foregroudn
width=300 # menu window width
height=20 # menu window height
lines=4 # lists items vertically
dim=0.9 # opacity

r=$(bspc query -T -m focused | head -1 | grep -Eo '[0-9]+x[0-9]+')
w=$(echo $r | cut -d x -f 1)
h=$(echo $r | cut -d x -f 2)
x=$((($w - $width) / 2))
y=$((($h - $height*5) / 2))

exec j4-dmenu-desktop --dmenu="dmenu -i -l $lines -nb $nb -fn $fn -nf $nf -sb $sb -sf $sf -x $x -y $y -w $width -h $height -dim $dim" --term="urxvt"
